#!/usr/bin/env bash

source ~/.oh-my-zsh/custom/plugins/zsh-git-fzf/src/helpers

colorful_echo "Install fzf\n"

if [ -d ~/.fzf ] ; then
    pushd ~/.fzf > /dev/null
    git pull
    ./install
    popd > /dev/null
else
    git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
    ~/.fzf/install
fi

colorful_echo "Install zsh-git-fzf plugin\n"

if [ -d ~/.oh-my-zsh/custom/plugins/zsh-git-fzf ] ; then
    pushd ~/.oh-my-zsh/custom/plugins/zsh-git-fzf > /dev/null
    git pull
    colorful_echo "Restart your shell or reload config file(source ~/.zshrc)"
    popd > /dev/null
else
    git clone https://github.com/alexiszamanidis/zsh-git-fzf.git ~/.oh-my-zsh/custom/plugins/zsh-git-fzf
    colorful_echo "Add plugin to plugin list:"
    colorful_echo "- Open .zshrc(e.g. code .zshrc, vim .zshrc)"
    colorful_echo " - Add plugin to plugin list: 'plugins=(zsh-git-fzf)'"
    colorful_echo " - Restart your shell or reload config file(source ~/.zshrc)"
fi
